{
  "expo": {
    "name": "pointfair",
    "slug": "pointfair",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#25292e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "É necessário habilitar o acesso ao armazenamento para compartilhar imagens."
        }
      ]
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#25292e"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.pointfair.pointfair",
      "config": { 
        "googleMaps": { 
          "apiKey": "AIzaSyBynQ2xU5JUFQQXr0lI3qrlJfaq7IPaBGs" 
        }    
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "f7e04f48-d820-4d2e-a10c-6fd5dd6e7db2"
      }
    }
  },
  "react-native-google-mobile-ads": {
    "android_app_id": "ca-app-pub-2293837588242630~9146826031"
  }
}
