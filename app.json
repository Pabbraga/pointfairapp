{
  "expo": {
    "name": "pointfair",
    "slug": "pointfair",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#25292e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "É necessário habilitar o acesso ao armazenamento para compartilhar imagens."
        }
      ]
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#25292e"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.pointfair.pointfair"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "react-native-google-mobile-ads": {
    "android_app_id": "ca-app-pub-7276461289946451~5037113103"
    },
    "extra": {
      "eas": {
        "projectId": "0c6a9151-8352-4a4f-a258-6d6f62782587"
      }
    }
  }
}
